@model Fall2024_Assignment3_jbmcclenny.Models.MovieActorViewModel

@{
    ViewData["Title"] = "Create";
}

<head>
    <link rel="stylesheet" href="~/css/movie-actor.css">
</head>


<h1 class="header">Create Connection</h1>

<hr />
<div class="table">
    <div class="row">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Movie" class="control-label"></label>
                <select asp-for="MovieId" class ="form-control" asp-items="ViewBag.MovieId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Actor" class="control-label"></label>
                <select asp-for="ActorId" class ="form-control" asp-items="ViewBag.ActorId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="sidebar">
    <a asp-controller="Home" asp-action="Index" class="btn btn-mini">Home</a>
    <hr />
    <a asp-controller="Movie" asp-action="Index" class="btn btn-mini">Movie Actor Index</a>
</div>
