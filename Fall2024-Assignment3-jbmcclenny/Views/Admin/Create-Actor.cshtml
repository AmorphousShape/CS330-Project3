@model Fall2024_Assignment3_jbmcclenny.Models.ActorViewModel

@{
    ViewData["Title"] = "Create Actor Page";
}

<h1>Create Actor Page</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="ActorName" class="control-label"></label>
        <input asp-for="ActorName" class="form-control" />
        <span asp-validation-for="ActorName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HeadshotUrl" class="control-label"></label>
        <input asp-for="HeadshotUrl" class="form-control" />
        <span asp-validation-for="HeadshotUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Gender" class="control-label"></label>
        <input asp-for="Gender" class="form-control" />
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Age" class="control-label"></label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Movies" class="control-label"></label>
        <table class="table">
            <thead>
                <tr>
                    <th>Movie Title</th>
                    <th>Role</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Movies.Count; i++)
                {
                    <tr>
                        <td>
                            <input asp-for="Movies[i].MovieTitle" class="form-control" />
                            <span asp-validation-for="Movies[i].MovieTitle" class="text-danger"></span>
                        </td>
                        <td>
                            <input asp-for="Movies[i].Role" class="form-control" />
                            <span asp-validation-for="Movies[i].Role" class="text-danger"></span>
                        </td>
                        <td>
                            <button type="button" class="btn btn-danger" onclick="removeMovie(this)">Remove</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <button type="button" class="btn btn-success" onclick="addMovie()">Add Movie</button>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}